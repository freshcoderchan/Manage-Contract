
<%= form_for(job) do |form| %>
  <% if job.errors.any? %>
    <% job.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.label :job_type %>
    <%= form.collection_select(:job_type, :as => :select, :collection => Job.job_types.keys.to_a) %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, rows:15, class: 'form-control', placeholder: 'Description' %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class: 'form-control', placeholder: 'E-mail' %>
  </div>

  <div class="form-group">
    <%= form.text_area :address, rows:5, class: 'form-control', placeholder: 'Address' %>
  </div>

  <div class="form-group">
    <%= form.number_field :experience, class: 'form-control', placeholder: 'Requires Years of experience' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
