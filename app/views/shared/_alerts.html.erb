<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], image: :notice, title: "Listing App Alert!", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], image: :error, title: "Listing App Error!", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], image: :notice, title: "Listing App Notification!", sticky: false) %>
<% end %>