<% if !current_user %>
  <%= form_for([@resumes, @resumes.users.build]) do |f| %>
    <%= f.submit "Bookmark", class: "btn btn-danger" %>
  <% end %>
<% else %>
  <%= form_for([@resumes, @resumes.users.build]) do |f| %>
    <% f.hidden_field :user_id, value: current_user.id %>
    <% if @resumes.users.include? current_user %>
      <%= f.submit "Bookmarked!!", class "btn btn-success", disabled: "true" %>
    <% else %>
      <%= f.submit "Bookmark!", class: "btn btn-danger" %>
    <% end %>
  <% end %>
<% end %>


