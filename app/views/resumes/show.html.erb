<div class="row">
  <div class="col-md-9">
    <table class="table">
      <h1><%= @resume.first_name %> <%= @resume.last_name %></h1>
      <tbody>
        <tr>
          <th scope="row">City:</th>
          <td><%= @resume.city %></td>
        </tr>
        <tr>
          <th scope="row">Country:</th>
          <td><%= @resume.country %></td>
        </tr>
        <tr>
          <th scope="row">Contact information</th>
          <td><%= @resume.contact_information %></td>
        </tr>
        <tr>
          <th scope="row">Phone</th>
          <td><%= @resume.phone %></td>
        </tr>
        <tr>
          <th scope="row">Resume privacy:</th>
          <td><%= @resume.status %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <%= image_tag placeholder_img(@resume.profile_pic, 'logo'), width: '100%' %>
  </div>
</div>

<hr>

<h2>Education</h2>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">Degree:</th>
      <td><%= @resume.degree %></td>
    </tr>
    <tr>
      <th scope="row">School:</th>
      <td><%= @resume.school %></td>
    </tr>
    <tr>
      <th scope="row">Fields of study</th>
      <td><%= @resume.field_of_study %></td>
    </tr>
    <tr>
      <th scope="row">Country</th>
      <td><%= @resume.education_country %></td>
    </tr>
    <tr>
      <th scope="row">City:</th>
      <td><%= @resume.education_city %></td>
    </tr>
    <tr>
      <th scope="row">Time Period</th>
      <td><%= @resume.education_start_date %> - <%= @resume.education_end_date %></td>
    </tr>
  </tbody>
</table>

<hr>

<h2>Work Experience</h2>
<% @resume.work_experiences.each do |w| %>
  <table class="table">
  <tbody>
    <tr>
      <th scope="row">Job title:</th>
      <td><%= w.job_title %></td>
    </tr>
    <tr>
      <th scope="row">Company:</th>
      <td><%= w.company %></td>
    </tr>
    <tr>
      <th scope="row">Country</th>
      <td><%= w.country %></td>
    </tr>
    <tr>
      <th scope="row">City</th>
      <td><%= w.city %></td>
    </tr>
    <tr>
      <th scope="row">Time Period</th>
      <td><%= w.start_date %> - <%= w.end_date %></td>
    </tr>
    <tr>
      <th scope="row">Years of experience</th>
      <td><%= w.years_of_experience %></td>
    </tr>
    <tr>
      <th scope="row">Less then one year</th>
      <td><%= w.less_than_one_year %></td>
    </tr>
    <tr>
      <th scope="row">Job description</th>
      <td><%= w.job_description %></td>
    </tr>
    <tr>
      <th scope="row">Salaries</th>
      <td><%= w.salary %></td>
    </tr>
    <tr>
      <th scope="row">I currently work here</th>
      <td><%= w.i_currently_work_here %></td>
    </tr>
    <tr>
      <th scope="row">Job Type</th>
      <td><%= JobType.find_by_id(w.job_type_work_exp).title %></td>
    </tr>
  </tbody>
</table>
<% end %>

<hr>

<h2>Additional information</h2>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">Desired Job Title:</th>
      <td><%= @resume.desired_job_title %></td>
    </tr>
    <tr>
      <th scope="row">Desired Job Types</th>
      <td>
        <% @resume.job_type_ids.each do |j| %>
          <%= JobType.find_by_id(j).title %><br>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">Desired salary per month</th>
      <td><%= @resume.desired_salary_per_month %></td>
    </tr>
    <tr>
      <th scope="row">Desired salary per year:</th>
      <td><%= @resume.desired_salary_per_year %></td>
    </tr>
    <tr>
      <th scope="row">I am willing to relocate</th>
      <td><%= @resume.relocation %></td>
    </tr>
    <tr>
      <th scope="row">Employement eligibility</th>
      <td><%= @resume.employement_eligibility %></td>
    </tr>
    <tr>
      <th scope="row">Additional information (text)</th>
      <td><%= @resume.additional_information_step_4 %></td>
    </tr>
  </tbody>
</table>

<hr>

<table class="table">
  <h3>Skills</h3>
  <tbody>
  <% @resume.skills.each do |s| %>
    <tr>
      <th scope="row">Title:</th>
      <td><%= s.title %></td>
    </tr>
    
    <tr>
      <th scope="row">Years of experience</th>
      <td><%= s.experience %></td>
    </tr>
<% end %>
  </tbody>
</table>

<hr>

<table class="table">
  <h3>Certifications / Licenses</h3>
  <% @resume.certifications.each do |c| %>
  <tbody>
    <tr>
      <th scope="row">Title:</th>
      <td><%= c.title %></td>
    </tr>
    <tr>
      <th scope="row">Time Period</th>
      <td><%= c.start_date %> - <%= c.end_date %></td>
    </tr>
    <tr>
      <th scope="row">Description</th>
      <td><%= c.description %></td>
    </tr>
  </tbody>
</table>
<% end %>

<hr>



