<div class="nested-fields">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :job_title %>
			  <%= f.text_field :job_title, class: 'form-control' %>
			</div> 

			<div class="form-group">
			  <%= f.label :company %>
			  <%= f.text_field :company, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :country %>
			  <%= f.text_field :country, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :city %>
			  <%= f.text_field :city, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :i_currently_work_here %>
			  <%= f.check_box :i_currently_work_here %>
			</div>
		</div>

		<div class="col-md-6">
			<h5>Time Period</h5>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
					  <%= f.label :start_date %>
					  <%= f.date_field :start_date, class: 'form-control' %>
					</div>
				</div>

				<div class="col-md-6">
					<div class="form-group">
					  <%= f.label :end_date %>
					  <%= f.date_field :end_date, class: 'form-control' %>
					</div>
				</div>
			</div>

			<div class="form-group">
			  <%= f.label :years_of_experience %>
			  <%= f.number_field :years_of_experience, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :job_description %>
			  <%= f.text_area :job_description, row: 2, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :salary %>
			  <%= f.number_field :salary, class: 'form-control' %>
			</div>

		</div>
	</div>
	<%= link_to_remove_association 'Remove Work Experience', f, class: "badge badge-danger" %>
	<hr>
</div>